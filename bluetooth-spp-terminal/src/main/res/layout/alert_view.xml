<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:weightSum="6">

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="서보 모터 기준 맞추기" android:textSize="36sp" android:layout_gravity="center"  android:gravity="center"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="왼쪽" android:textSize="36sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/rr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="오른쪽" android:textSize="36sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="초기화" android:textSize="36sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="돌아가기" android:textSize="36sp"/>
    </LinearLayout>
</LinearLayout>
